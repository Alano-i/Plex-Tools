{
  "name": "plexsortout",
  "title": "Plex工具箱",
  "author": "BeiMou(yewei)",
  "description": "下载完成后，自动进行整理。",
  "version": "0.1",
  "requirements": [],
  "configField": [
    {
      "fieldName": "Added",
      "fieldType": "Bool",
      "label": "Added",
      "helperText": "是否使用Plex入库事件作为触发运行,默认MR下载完成时运行",
      "defaultValue": false
    },
    {
      "fieldName": "SortTitle",
      "fieldType": "Bool",
      "label": "SortTitle",
      "helperText": "是否整理首字母",
      "defaultValue": true
    },
    {
      "fieldName": "Genres",
      "fieldType": "Bool",
      "label": "Genres",
      "helperText": "是否整理标签",
      "defaultValue": true
    },
    {
      "fieldName": "SelfGenres",
      "fieldType": "String",
      "label": "SelfGenres",
      "helperText": "自定义标签映射例,原标签1:新标签1,原标签2:新标签2",
      "defaultValue": "SelfGenres:SelfGenres"
    },
    {
      "fieldName": "Top250",
      "fieldType": "Bool",
      "label": "Top250",
      "helperText": "是否添加榜单标签",
      "defaultValue": true
    },
    {
      "fieldName": "Collection",
      "fieldType": "Bool",
      "label": "Collection",
      "helperText": "是否整理合集",
      "defaultValue": true
    },
    {
      "fieldName": "Poster",
      "fieldType": "Bool",
      "label": "Poster",
      "helperText": "是否筛选海报",
      "defaultValue": true
    },
    {
      "fieldName": "LIBRARY",
      "fieldType": "String",
      "label": "LIBRARY",
      "helperText": "要处理的媒体库名称(默认全库)逗号间隔",
      "defaultValue": "ALL"
    }

  ],
  "logoUrl":"/plugins/plexsortout/logo.jpg",
  "githubUrl": "https://github.com/WadeChenn/Plex-Tools/tree/main/Plex-SortTittle/MR-Plugins",
  "helpDocUrl": "https://github.com/WadeChenn/Plex-Tools"
}
